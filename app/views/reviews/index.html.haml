%div.card
    %div.f-block
        %div.header
            %h1  Review : #{@movie.title}
        %div.body
            %div.logInTwitter.flex.justify-end	
                = link_to "Add a new review", new_movie_review_path(@movie) ,class: "btn btn-primary"
            %div.table-broder
                %table#movies
                    %thead
                        %tr
                        %th id
                        %th Potatoes
                        %th Comments
                        %th moviegoer
                        %th action
                    %tbody
                        - if @reviews
                            - @movie.reviews.each_with_index do |review,index|
                                %tr
                                    %td= index+1
                                    %td
                                        %div.flex
                                            - n = '1'
                                            - (1..review.potatoes.to_i).each do |i|
                                                = image_tag("Potatoe.png" ,class: 'potatoe')   
                                    %td= review.comments
                                    %td= review.moviegoer.name
                                    %td= link_to "Edit", edit_movie_review_path(@movie,review)
                        - else
                            %p No
            = link_to 'Back to movie list', movies_path ,class: "btn btn-warning"
