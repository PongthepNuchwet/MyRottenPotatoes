%div.card
  %div.header
    %h1 All Movies
  %div.logInTwitter
    %div.profile
      - if @current_user
        %img{:src => session[:image]}
        %p.welcome 
          = session[:name]
        = button_to raw('<i class="fas fa-sign-out-alt"></i> Log Out'), logout_path,method: :post ,class: "btn btn-danger"
      - else
        =button_to raw('<i class="fab fa-twitter"></i> Log in with Twitter'),'/auth/twitter' ,method: :post ,class: "btn btn-primary"
  %div.body
    %div.table-broder
      %table#movies
        %thead
          %tr
            %th id
            %th Movie Title
            %th Rating
            %th Release Date
            %th More Info
            %th All review
        %tbody
          - @movies.each_with_index do |movie,index|
            %tr
              %td= index+1
              %td= movie.title 
              %td= movie.rating
              %td= movie.release_date
              %td= link_to "More about #{movie.title}", movie_path(movie)
              %td= link_to "All reviews for this moview", movie_reviews_path(movie)

    = link_to "Add new movie", new_movie_path ,class: "btn btn-primary"
%div.card
  %div.header
    %h1 Search TMDb for a movie
  %div.body
    = form_tag search_query_path, :method => :post do
      = text_field :query , :value , class: 'custom'
      = submit_tag "Search" , class: "btn btn-primary"