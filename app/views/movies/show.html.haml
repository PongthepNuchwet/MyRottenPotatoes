%div.card
  %div.header
    %h1 Details about : #{@movie.title}
  %div.body.p-0
    %dl
      %div.div-list
        %dt Title: 
        %dd 
          = @movie.title

      %div.div-list
        %dt Rating: 
        %dd 
          = @movie.rating

      %div.div-list
        %dt Released on: 
        %dd 
          = @movie.release_date.strftime("%B %d, %Y")

      %div.div-list
        %dt Description:
        %dd 
          = @movie.description
    %div.footer
      = link_to raw('<i class="bi bi-pencil"></i> Edit info'), edit_movie_path(@movie),class: "btn btn-seccondary"
      = link_to raw('<i class="bi bi-chat-heart"></i> Reviews') , movie_reviews_path(@movie) , class: "btn btn-primary"
      = button_to raw('<i class="bi bi-eraser"></i> Delete'), movie_path(@movie), :method => :delete ,class: "btn btn-danger"
      = link_to raw('<i class="bi bi-reply"></i> Back to movie list'), movies_path ,class: "btn btn-warning"