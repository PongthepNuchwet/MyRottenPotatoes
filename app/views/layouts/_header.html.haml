%header
    %div.header-flex
        = link_to "Rotten Potatoes" , movies_path
        %div.logInTwitter
            - if @current_user
                %div.profile
                    %img{:src => session[:image]}
                    %p.welcome 
                        = @current_user.name
                %div.button
                    = button_to raw('<i class="bi bi-door-open"></i> Log Out'), logout_path,method: :post ,class: "btn btn-danger"
            - else
                %div.button
                    =button_to raw('<i class="bi bi-twitter"></i> Log in with Twitter'),'/auth/twitter' ,method: :post ,class: "btn btn-twitter"
                    =button_to raw('<i class="bi bi-facebook"></i> Log in with Facebook'),'/auth/facebook' ,method: :post ,class: "btn btn-facebook"
