%div.card
  %div.header
    %h1 All Movies
  %div.body
    %div.table-broder
      %table#movies
        %thead
          %tr
            %th id
            %th Movie Title
            %th Rating
            %th Release Date
            %th More Info
        %tbody
          - @movies.each_with_index do |movie,index|
            %tr
              %td= index
              %td= movie.title 
              %td= movie.rating
              %td= movie.release_date
              %td= link_to "More about #{movie.title}", movie_path(movie)

    = link_to "Add new movie", new_movie_path ,class: "btn btn-primary"