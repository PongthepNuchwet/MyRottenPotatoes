%div.card
  %div.header
    %h1 All Movies
  %div.body
    = form_tag root_path, :method => :get do
      %div.formInline
        = radio_button :query ,:filter , "default"
        = label :filter, "default"
        = radio_button :query ,:filter , "for_kids"
        = label :filter, "For kids"
        = radio_button :query ,:filter , "recently_reviewed"
        = label :filter, "Recently reviewed"
        = text_field :query , :day , class: 'custom'
        = button_tag(type: "submit", class: "btn btn-primary btn-search") do 
          <i class="bi bi-search"></i> Search
    %div#movies
    %div.table-broder
      %table#movies
        %thead
          %tr
            %th Movie Title
            %th Rating
            %th Release Date
            %th More Info
        %tbody
          =render :partial=>'movie', :collection=>@movies
    = link_to raw('<i class="bi bi-plus-circle"></i> Add new movie'), new_movie_path ,class: "btn btn-primary"
=render :partial=>'TMDb'
        